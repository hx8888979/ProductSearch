<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   app:cardElevation="5dp"
                                   android:layout_marginHorizontal="5dp"
                                   android:layout_marginBottom="10dp">
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
    android:layout_margin="3dp">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp" app:srcCompat="@android:drawable/btn_dialog"
                android:id="@+id/image"/>
        <LinearLayout
                android:layout_marginLeft="2dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/title" android:textSize="16sp"
                    android:lines="3"
                    android:textStyle="bold" android:textColor="@color/secondaryTextColor"
                    android:textAlignment="center"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp">
                <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/shipping_cost" android:layout_weight="1"/>
                <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/dayleft" android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:text="TextView"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/price" android:textStyle="bold"
                    android:textColor="@color/primaryColor" android:textAlignment="textEnd"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>